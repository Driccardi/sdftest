<?xml version="1.0" encoding="UTF-8"?>

<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	<xsd:element name="toolset">
		<xsd:complexType>
			<xsd:all>
				<xsd:element name="name" minOccurs="1" type="xsd:string"/>
				<xsd:element name="scriptfile" minOccurs="1">
					<xsd:simpleType>
						<xsd:restriction base="xsd:string">
							<xsd:pattern value="\[/[A-Za-z0-9._\-/]+\]"/>
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:element>
				<xsd:element name="rpcschema" minOccurs="1" type="xsd:string"/>
				<xsd:element name="exposetoaiconnector" minOccurs="0" default="F">
					<xsd:simpleType>
						<xsd:restriction base="xsd:string">
							<xsd:enumeration value="T"/>
							<xsd:enumeration value="F"/>
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:element>
				<xsd:element name="exposetosuiteagents" minOccurs="0" default="F">
					<xsd:simpleType>
						<xsd:restriction base="xsd:string">
							<xsd:enumeration value="T"/>
							<xsd:enumeration value="F"/>
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:element>
				<xsd:element name="permissions" minOccurs="0">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="permission" maxOccurs="unbounded">
								<xsd:complexType>
									<xsd:all>
										<xsd:element name="permkey" minOccurs="1">
											<xsd:annotation>
												<xsd:documentation>References: customrecordtype, customsegment, customtransactiontype. Values: generic_permission.</xsd:documentation>
											</xsd:annotation>
											<xsd:simpleType>
												<xsd:restriction base="xsd:string">
													<xsd:pattern value="[A-Z0-9_]+"/>
												</xsd:restriction>
											</xsd:simpleType>
										</xsd:element>
										<xsd:element name="permlevel" minOccurs="1">
											<xsd:annotation>
												<xsd:documentation>Values: generic_permission_level.</xsd:documentation>
											</xsd:annotation>
											<xsd:simpleType>
												<xsd:restriction base="xsd:string">
													<xsd:pattern value="[A-Z0-9_]+"/>
												</xsd:restriction>
											</xsd:simpleType>
										</xsd:element>
									</xsd:all>
								</xsd:complexType>
							</xsd:element>
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>
			</xsd:all>
			<xsd:attribute name="scriptid" use="required">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:pattern value="custtoolset_[a-zA-Z0-9_]+"/>
						<xsd:maxLength value="27"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:attribute>
		</xsd:complexType>
	</xsd:element>
</xsd:schema>
